<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.web.twoh.placesapitutorial.MainActivity">

    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Get Location" />

    <EditText
        android:layout_margin="5dp"
        android:background="@color/primary_material_light"
        android:id="@+id/et_alamat"
        android:hint="Nama Tempat"
        android:layout_below="@id/bt_getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_geoCoding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_alamat"
        android:layout_centerHorizontal="true"
        android:text="Smart Geocode" />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_ppicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_geoCoding"
        android:layout_centerHorizontal="true"
        android:text="@string/place_picker" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tv_place_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_ppicker"
        android:background="@color/primary_material_light"
        android:text="Place name..." />

</RelativeLayout>
